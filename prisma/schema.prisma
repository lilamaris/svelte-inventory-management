generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"

  moduleFormat           = "esm"
  generatedFileExtension = "ts"
  importFileExtension    = "ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Admin
  Manager
  Viewer
}

model User {
  id String @id @default(uuid())
  username String
  email String @unique
  passwordHash String
  createdAt DateTime @default(now())

  sessions Session[]
  roles UserRole[]
}

model UserRole {
  id String @id @default(uuid())
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  role Role
}

model Session {
  id String @id
  expiresAt DateTime

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}